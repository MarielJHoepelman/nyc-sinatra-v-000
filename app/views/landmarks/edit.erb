<h2>Edit Historical Landmark</h2>

  <form action="/landmarks/<%= @landmark.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="landmark_name" >Landmark Name</label>
    <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">

    <label> Edits for Titles </label>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label><input id="<%= title.name %>" type="checkbox" name="figure[title_ids]" value="<%= title.id %>">
    <% end %>

    <label> Landmarks </label>
    <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
    <% end %>

    <label for="new_landmark">Landmark Name</label>
    <input type="text" name="landmark[name]" id="new_landmark"> </br>

    <input type="submit" value="Edit Figure">
  </form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
