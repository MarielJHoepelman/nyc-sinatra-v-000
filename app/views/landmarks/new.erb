<h2>Create New Landmark</h2>

<!-- add content here -->
<form action="/landmarks" method="POST">
  <label for="landmark_name">Landmark Name</label>
  <input type="text" name="landmark[name]" id="landmark_name"> </br>

  <label for="landmark_year">Year</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year"> </br>

  <label> Landmarks </label>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
  <% end %>


<input type="submit" value="Create New Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
